<%- include("partials/header") %>
<div class="container">
	<h1>Edit Movie</h1>
	<form action="/movies/<%= movie.id %>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="title">Title</label>
    <input type="text" class="form-control" name="title" value="<%= movie.title %>" >
  </div>
  <div class="mb-3">
    <label for="description">Description</label>
    <input type="text" class="form-control" name="description" value="<%= movie.description %>">
  </div>
  <div class="mb-3"> value="<%= movie.title %>"
    <label for="director">Director</label>
    <input type="text" class="form-control" name="director" value="<%= movie.director %>">
  </div>
  <div class="mb-3">
    <label for="producer">Producer</label>
    <input type="text" class="form-control" name="producer" value="<%= movie.producer %>">
  </div>
  <div class="mb-3">
    <label for="date">Date</label>
    <input type="date" class="form-control" name="date" value="<%= movie.date.toISOString().split("T")[0] %>">
  </div>
  <div class="mb-3">
    <label for="genre" >Genre</label>
    <select class="form-control" name="genre" id="genre">
		<option disabled> -- Choose below -- </option>
	 	<option <%= movie.genre === "action" ? "selected" : "" %>>Action</option>
		<option <%= movie.genre === "horror" ? "selected" : "" %>>Horror</option>
		<option <%= movie.genre === "thriler" ? "selected" : "" %>>Thriller</option>
		<option <%= movie.genre === "comedy" ? "selected" : "" %>>Comedy</option>
		<option <%= movie.genre === "romance" ? "selected" : "" %>>Romance</option>
		<option <%= movie.genre === "sci-fi" ? "selected" : "" %>>Sci-fi</option>
		<option <%= movie.genre === "adventure" ? "selected" : "" %>>Adventure</option>
		<option <%= movie.genre === "drama" ? "selected" : "" %>>Drama</option>movie
	</select>
  </div>
  <div class="mb-3">
    <label for="image">Link To Image</label>
    <input type="text" class="form-control" name="image" value="<%= movie.image %>">
  </div>
  	<button type="submit" class="btn btn-primary">Save</button>
	</form>	
</div>


