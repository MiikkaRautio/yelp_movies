<%- include("partials/header") %>
<div class="container">
	<h1>Add New Movie</h1>
	<form action="/movies" method="POST">
  <div class="mb-3">
    <label for="title">Title</label>
    <input type="text" class="form-control" name="title" placeholder="e.g Star Wars" autofocus>
  </div>
  <div class="mb-3">
    <label for="description">Description</label>
    <input type="text" class="form-control" name="description">
  </div>
  <div class="mb-3">
    <label for="director">Director</label>
    <input type="text" class="form-control" name="director" placeholder="George Lucas">
  </div>
  <div class="mb-3">
    <label for="producer">Producer</label>
    <input type="text" class="form-control" name="producer" placeholder="Rick McCallum">
  </div>
  <div class="mb-3">
    <label for="date">Date</label>
    <input type="date" class="form-control" name="date">
  </div>
  <div class="mb-3">
    <label for="genre">Genre</label>
    <select class="form-control" name="genre" id="genre">
		<option disabled selected> -- Choose below -- </option>
	 	<option>Action</option>
		<option>Horror</option>
		<option>Thriller</option>
		<option>Comedy</option>
		<option>Romance</option>
		<option>Sci-fi</option>
		<option>Adventure</option>
		<option>Drama</option>
	</select>
  </div>
  <div class="mb-3">
    <label for="image">Link To Image</label>
    <input type="text" class="form-control" name="image" placeholder="https://myimage.com">
  </div>
  	<button type="submit" class="btn btn-primary">Submit</button>
	</form>	
</div>


